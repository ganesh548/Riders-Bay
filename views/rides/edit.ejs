<%- include("../partials/header") %>
<div class="container pt-5 light_black justify-content-center white my-5">
    <h1 style="width: 60%;" class="mx-auto my-2">Edit <%=rides.name%></h1>
    <form action="/rides/<%= rides._id%>?_method=PUT" class="mt-3" method="post">
        <div class="form-group col-md-6 mx-auto" style="width: 40%;">
            <input type="text" class="form-control" name="rides[name]" id="text" placeholder="Name Your Ride" required value="<%=rides.name%>">
        </div>
        <div class="form-group col-md-6 mx-auto"style="width: 40%;">
            <input type="text" class="form-control" name="rides[image]" id="text" placeholder="Image URL" required value="<%=rides.image%>">
        </div>
        <div class="form-group col-md-6 mx-auto"style="width: 40%;">
            <input type="text" class="form-control" name="rides[days]" id="text" placeholder="Total No. Of Days" required value="<%=rides.days%>">
        </div>
        <div class="form-group col-md-6 mx-auto"style="width: 40%;">
            <input type="text" class="form-control" name="rides[startDate]" id="text" placeholder="Begins at" required value="<%=rides.startDate%>">
        </div>
        <div class="form-group col-md-6 mx-auto"style="width: 40%;">
            <input type="text" class="form-control" name="rides[location]" id="location" placeholder="location" required value="<%=rides.location%>">
        </div>
        <div class="form-group col-md-6 mx-auto"style="width: 35%;">
            <div class="row">
                <legend class="col-form-label">People on rides:</legend>
            </div>
            <div class="col-sm-10">
                <div class="form-check">
                    <% if(rides.rideType==="male"){ %>
                    <input type="radio" class="form-check-input" id="gender" value="male" name="rides[rideType]" checked>
                    <% } else { %>
                        <input type="radio" class="form-check-input" id="gender" value="male" name="rides[rideType]">
                    <% } %>
                    <label class="form-check-label" for="gridRadios1">
                        Male
                    </label>
                </div>
                <div class="form-check">
                    <% if(rides.rideType==="female"){ %>
                        <input type="radio" class="form-check-input" id="gender"value="female" name="rides[rideType]" checked>
                    <% } else { %>
                        <input type="radio" class="form-check-input" id="gender"value="female" name="rides[rideType]">
                    <% } %>
                   
                  <label class="form-check-label" for="gridRadios2">
                    Female
                  </label>
                </div>
                <div class="form-check disabled">
                    <% if(rides.rideType==="both"){ %>
                        <input type="radio" class="form-check-input" id="gender"value="male/female" name="rides[rideType]" checked>
                    <% } else { %>
                        <input type="radio" class="form-check-input" id="gender"value="male/female" name="rides[rideType]">
                    <% } %>
                    
                  <label class="form-check-label" for="gridRadios3">
                    Male/Female
                  </label>
                </div>
            </div>
        </div>
        <div class="form-group col-md-6 mx-auto"style="width: 35%;">
            <div class="row">
                <legend class="col-form-label">Type Of ride:</legend>
            </div>
            <div class="col-sm-10">
                <div class="form-check">
                    <% if(rides.genderType==="solo"){ %>
                        <input type="radio" class="row-md-4"  id="gender" value="solo" name="rides[genderType]" checked>
                    <% } else { %>
                        <input type="radio" class="row-md-4"  id="gender" value="solo" name="rides[genderType]">
                    <% } %>
                    
                    <label class="form-check-label" for="gridRadios1">
                        Solo
                    </label>
                </div>
                <div class="form-check">
                    <% if(rides.genderType==="duo"){ %>
                        <input type="radio" class="row-md-4" id="gender"value="duo" name="rides[genderType]" checked>
                    <% } else { %>
                        <input type="radio" class="row-md-4" id="gender"value="duo" name="rides[genderType]">
                    <% } %>
                    
                    <label class="form-check-label" for="gridRadios2">
                        Duo
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group col-md-6"style="width: 40%;margin:20px auto;">
            <input type="text" class="form-control" id="text" name="rides[kms]" placeholder="Total Kms" required value="<%=rides.kms%>">
        </div>
        <div class="row justify-content-center">
            <button type="submit" class="btn btn-lg black white" style="width: 37%;margin:20px auto;">Edit</button>
        </div>
    </form>
</div> 
<%- include("../partials/footer") %>

