<%- include("../partials/header") %>
<div class="container  light_black justify-content-center white my-5">
    <div class="mx-auto my-3 ">
        <p style="width: 100%;" class=" h2">Fill up the form to Host the Ride</p>
    </div>
    <form method="post" class="mt-3" action="/rides">
        <div class="form-group col-md-6 mx-auto" style="width: 90%;">
            <input type="text" class="form-control" name="rides[name]" id="text" placeholder="Name Your Ride" required>
        </div>
        <div class="form-group col-md-6 mx-auto"style="width: 90%;">
            <input type="text" class="form-control" name="rides[image]" id="text" placeholder="Image URL" required>
        </div>
        <div class="form-group col-md-6 mx-auto"style="width: 90%;">
            <input type="text" class="form-control" name="rides[days]" id="text" placeholder="Total No. Of Days" required>
        </div>
        <div class="form-group col-md-6 mx-auto"style="width: 90%;">
            <input type="text" class="form-control" name="rides[startDate]" id="text" placeholder="Begins at" required>
        </div>
        <div class="form-group col-md-6 mx-auto"style="width: 90%;">
            <input type="text" class="form-control" name="rides[location]" id="text" placeholder="location" required>
        </div>
        <div class="form-group col-md-6 mx-auto"style="width: 85%;">
            <div class="row">
                <legend class="col-form-label">People on rides:</legend>
            </div>
            <div class="col-sm-10">
                <div class="form-check">
                    <input type="radio" class="form-check-input" id="gender" value="male" name="rides[rideType]">
                    <label class="form-check-label" for="gridRadios1">
                        Male
                    </label>
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" id="gender"value="female" name="rides[rideType]">
                  <label class="form-check-label" for="gridRadios2">
                    Female
                  </label>
                </div>
                <div class="form-check disabled">
                    <input type="radio" class="form-check-input" id="gender"value="male/female" name="rides[rideType]">
                  <label class="form-check-label" for="gridRadios3">
                    Male/Female
                  </label>
                </div>
            </div>
        </div>
        <div class="form-group col-md-6 mx-auto"style="width: 85%;">
            <div class="row">
                <legend class="col-form-label">Type Of ride:</legend>
            </div>
            <div class="col-sm-10">
                <div class="form-check">
                    <input type="radio" class="row-md-4"  id="gender" value="solo" name="rides[genderType]">
                    <label class="form-check-label" for="gridRadios1">
                        Solo
                    </label>
                </div>
                <div class="form-check">
                    <input type="radio" class="row-md-4" id="gender"value="duo" name="rides[genderType]">
                    <label class="form-check-label" for="gridRadios2">
                        Duo
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group col-md-6"style="width: 85%;margin:20px auto;">
            <input type="text" class="form-control" id="text" name="rides[kms]" placeholder="Total Kms" required>
        </div>
        <div class="row justify-content-center">
            <button type="submit" class="btn btn-lg black white" style="width: 37%;margin:20px auto;">Submit</button>
        </div>
    </form>
</div> 
<%- include("../partials/footer") %>